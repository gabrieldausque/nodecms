<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">

    <name>Team A</name>
    <!-- The following elements are optional and free of formatting constraints -->
    <creationDate>2021/09/01</creationDate>
    <author>Gabriel DAUSQUE-JOUAN</author>
    <authorEmail>gabrieldausque.pro@gmail.com</authorEmail>
    <authorUrl>https://theloneblacksheep.fr</authorUrl>
    <copyright>@gabrieldausque.pro</copyright>
    <license>MIT</license>
    <version>0.0.19</version>
    <description>The Team A core component</description>

    <namespace path="src">TheLoneBlackSheep\Component\TeamA</namespace>
    <scriptfile>install_script.php</scriptfile>
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <update>
        <schemas>
            <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>
    <administration>
        <menu>Team A</menu>
        <submenu>
            <menu link='option=com_teama&amp;task=news.display'>News</menu>
        </submenu>
        <files folder="administrator">
            <filename>index.html</filename>
            <filename>config.xml</filename>
            <filename>access.xml</filename>
            <folder>services</folder>
            <folder>src</folder>
            <folder>tmpl</folder>
            <folder>sql</folder>
            <folder>forms</folder>
            <folder>language</folder>
        </files>
    </administration>

    <files folder="components/com_teama">
        <folder>src</folder>
        <folder>tmpl</folder>
        <folder>language</folder>
        <folder>forms</folder>
    </files>

    <media folder="media" destination="com_teama">
        <folder>js</folder>
        <folder>css</folder>
        <folder>images</folder>
    </media>

</extension>