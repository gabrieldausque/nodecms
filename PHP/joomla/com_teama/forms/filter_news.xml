<?xml version="1.0" encoding="utf-8" ?>
<form>
    <fields name="filter">
        <field name="search"
               type="text"
               inputmode="search"
               label="COM_TEAMA_SEARCH_LABEL"
               decription="COM_TEAMA_NEWS_SEARCH_DESC"
               hint="JSEARCH_FILTER"/>
        <field
            name="tag"
            type="sql"
            label="COM_TEAMA_NEWS_TAGS_FIELD"
            query="SELECT DISTINCT id, tag FROM #__teama_tags"
            key_field="id"
            value_field="tag"
            multiple="multiple"
            onchange="this.form.submit();"/>
        <field
                name="title"
                type="text"
                label="COM_TEAMA_NEWS_TITLE_FIELD"
                onchange="this.form.submit();"/>
    </fields>
</form>