<?xml version="1.0" encoding="utf-8" ?>
<form>
    <fieldset>

        <field name="id"
               type="number"
               label="JGLOBAL_FIELD_ID_LABEL"
               default="0"
               class="readonly"
               readonly="true"
        />

        <field name="title"
               type="text"
               label="COM_TEAMA_FIELD_TITLE_LABEL"
               size="45"
               required="true"
               maxlength="255"
        />

        <field name="body"
               type="editor"
               filter="JComponentHelper::filterText"
               label="COM_TEAMA_FIELD_BODY_LABEL"
               buttons="true"
        />

        <field
                name="author"
                type="user"
                label="COM_TEAMA_FIELD_AUTHOR_LABEL"
                validate="UserId"
        />

    </fieldset>
</form>