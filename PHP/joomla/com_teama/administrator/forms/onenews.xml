<?xml version="1.0" encoding="utf-8" ?>
<form>
    <fieldset>
        <field name="id"
               type="number"
               label="JGLOBAL_FIELD_ID_LABEL"
               default="0"
               class="readonly"
               readonly="true"
        />

        <field name="title"
               type="text"
               label="COM_TEAMA_FIELD_TITLE_LABEL"
               size="45"
               required="true"
               maxlength="255"
        />

        <field name="summary"
               type="textarea"
               label="COM_TEAMA_FIELD_SUMMARY_LABEL"
               rows="5"
        />

        <field name="body"
               type="editor"
               filter="JComponentHelper::filterText"
               label="COM_TEAMA_FIELD_BODY_LABEL"
               buttons="true"
        />

        <field name="tags"
               type="text"
               label="COM_TEAMA_NEWS_TAGS_FIELD"
               size="45"
               maxlength="255"
        />

        <field
                name="author"
                type="user"
                label="COM_TEAMA_FIELD_AUTHOR_LABEL"
                validate="UserId"
        />

        <fields name="header_media">
            <fieldset
                    name="header-media"
                    label="COM_TEAMA_HEADER_IMAGE_FIELDS"
                >
                <field
                        name="image"
                        type="media"
                        preview="tooltip"
                        label="COM_TEAMA_FIELD_IMAGE_LABEL"
                        description="COM_TEAMA_FIELD_IMAGE_DESC" />
                <field name="alt"
                       type="text"
                       label="COM_TEAMA_FIELD_IMAGE_ALT_LABEL"
                       description="COM_TEAMA_FIELD_IMAGE_ALT_DESC"
                       size="30"/>
                <field name="caption"
                       type="text"
                       label="COM_TEAMA_FIELD_IMAGE_CAPTION_LABEL"
                       description="COM_TEAMA_FIELD_IMAGE_CAPTION_DESC"
                       size="30"/>
            </fieldset>
        </fields>

        <field
                name="catid"
                type="categoryedit"
                extension="com_teama"
                label="COM_TEAMA_TEAMA_FIELD_CATID_LABEL"
                description="COM_TEAMA_TEAMA_FIELD_CATID_DESC"
                required="true"
                default=""
                addfieldprefix="Joomla\Component\Categories\Administrator\Field"
        />

    </fieldset>
</form>