<?xml version="1.0" encoding="utf-8" ?>
<form>
    <fieldset name="general"
              addfieldpath="/administrator/components/com_teama/src/Field">
        <field name="id"
               type="hidden"
               label="JGLOBAL_FIELD_ID_LABEL"
               default="0"
               class="readonly teama-helprequest-field"
               readonly="true"
        />

        <field name="requester"
               type="text"
               label="COM_TEAMA_FIELD_HELP_REQUEST_REQUESTER_LABEL"
               size="45"
               required="true"
               maxlength="1000"
               class="teama-helprequest-field"
        />

        <field name="requester_service"
               type="text"
               label="COM_TEAMA_FIELD_HELP_REQUEST_REQUESTER_SERVICE_LABEL"
               size="45"
               required="true"
               maxlength="255"
               class="teama-helprequest-field"
        />

        <field name="request_type"
               type="sql"
               default=""
               key_field="id"
               value_field="name"
               query="SELECT id, name from #__teama_help_request_types ORDER BY id DESC"
               required="false"
               class="teama-helprequest-field"
        >
        </field>

        <field name="request_datetime"
               type="BSCalendar"
               label="COM_TEAMA_FIELD_HELP_REQUEST_REQUEST_DATE_LABEL"
               singleheader="true"
               translateformat="true"
               showtime="false"
               class="teama-helprequest-field"
               default="now"
        />

        <field name="address"
               type="textarea"
               label="COM_TEAMA_FIELD_ADDRESS_LABEL"
               rows="5"
               class="teama-helprequest-field"
        />

        <field name="content"
               type="editor"
               filter="JComponentHelper::filterText"
               label="COM_TEAMA_FIELD_HELP_REQUEST_SUMMARY_LABEL"
               buttons="[image]"
               class="teama-helprequest-field"
               required="true"
        />

    </fieldset>
    <fieldset name="objectives">
        <field name="objectives"
               type="BSHelpRequestObjectives"
               label="COM_TEAMA_HELP_REQUEST_OBJECTIVES_LABEL"
        />
    </fieldset>
</form>