<?xml version="1.0" encoding="utf-8"?>
<extension version="4.0" type="template" method="upgrade">
    <name>Team A Theme</name>
    <creationDate>2021-09-01</creationDate>
    <author>Gabriel DAUSQUE-JOUAN</author>
    <authorEmail>gabrieldausque.pro@gmail.com</authorEmail>
    <authorUrl>https://theloneblacksheep.fr</authorUrl>
    <copyright>Gabriel DAUSQUE-JOUAN 2021</copyright>
    <license>GNU/GPL</license>
    <version>0.0.23</version>
    <description>The Team A Theme</description>
    <files>
        <filename>component.php</filename>
        <filename>index.php</filename>
        <filename>templateDetails.xml</filename>
        <folder>images</folder>
        <folder>css</folder>
        <folder>js</folder>
        <folder>fonts</folder>
        <folder>html</folder>
    </files>
    <positions>
        <position>publicnavbar</position>
        <position>content</position>
        <position>header</position>
        <position>login</position>
        <position>breadcrumb</position>
        <position>left</position>
        <position>right</position>
        <position>top</position>
        <position>user1</position>
        <position>user2</position>
        <position>user3</position>
        <position>user4</position>
        <position>footer</position>
    </positions>
    <languages folder="language">
        <language tag="fr-FR">fr-FR/tpl_teamatheme.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field
                        name="siteTitle"
                        type="text"
                        default="Team A"
                        label="TPL_TEAMA_TITLE"
                        filter="string"
                        showon="brand:1"
                />
                <field
                        name="siteDescription"
                        type="text"
                        default="Votre dernier recours"
                        label="TPL_TEAMA_TAGLINE"
                        filter="string"
                        showon="brand:1"
                />
                <field
                        name="logoFile"
                        type="media"
                        default=""
                        label="TPL_TEAMA_LOGO_LABEL"
                        showon="brand:1"
                />
            </fieldset>
        </fields>
    </config>
</extension>