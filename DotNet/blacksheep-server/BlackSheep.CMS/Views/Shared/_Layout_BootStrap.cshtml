<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.ApplicationTitle</title>
    <link rel="stylesheet" href="/cms/css/fontawesome/css/all.min.css"/>
    <link rel="stylesheet" href="/cms/css/bootstrap/bootstrap.min.css"/>
    <link rel="stylesheet" href="/cms/css/blacksheep-main.css"/>
    <script src="/cms/js/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="/cms/js/BlackSheepCMS.js" type="text/javascript"></script>
    @await RenderSectionAsync("Scripts",false/*required*/)
</head>
<body>
<header>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">Navbar</span>
        </div>
    </nav>
</header>
<nav id="blacksheep-document-commandbar" class="navbar navbar-light bg-light">
    @await RenderSectionAsync("CommandBar", false)
</nav>
<main id="blacksheep-viewport">
    <aside id="blacksheep-left-zone">
        @await RenderSectionAsync("LeftAside", false)
    </aside>
    <main id="blacksheep-body-zone">
        @RenderBody()
    </main>
    <aside id="blacksheep-right-zone">
        <header class="blacksheep-aside-header">
            <div onclick="hideRightPane()"><i class="fas fa-close"></i></div>
        </header>
        @await RenderSectionAsync("RightAside", false)
    </aside>
</main>
</body>
</html>
